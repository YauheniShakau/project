<% @posts.each do |post| %>
<div class="post row clearfix">
	<h2>
		<%= link_to post.title, post %><br>
		<%= image_tag post.image.url(:large) %><br>
		<small class="author">Submitted <%= time_ago_in_words(post.created_at) %> by <%= post.user.name if post.user %></small>
	</h2>
</div>
<div id="apple_pagination">
	<%= will_paginate @posts %>
</div>
<% end %>