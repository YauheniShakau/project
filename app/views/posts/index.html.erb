<main class="main pt-4" role="main">

	<div class="container">

		<div class="row">
			<div class="col-md-9">
				<% @posts.each do |post| %>
				<article class="card mb-4">
					<header class="card-header">
						<div class="card-meta">
							<h1 class="card-title"><%= link_to post.title, post %><br></h1>
							<time class="author">Submitted <%= time_ago_in_words(post.created_at) %> by 
								<%= show_name(post.user) %>
							 in <a href="#">Journey</a></time>
						</div>
					</header>
					<a href="/posts/<%= post.id %>">
						<img class="card-img" src="<%= post.image_url %>"/>
					</a>
					<div class="card-body">
						<h3> Description: </h3>
						<p class="card-text"><%= post.description %></p>
					</div>
				</article><!-- /.card -->
				<% end %>
			</div>
			<div class="col-md-3 ml-auto">
			</div>
		</div><!-- /.card -->
	</aside>
</div>
<%= will_paginate @posts %>
</main>