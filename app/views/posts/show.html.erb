<div class="page-header">
  <h1><%= link_to @post.title, post_path(@post.id) %><br> <small>Submitted by <%= @post.user.email %></small></h1>
</div>

<div class="btn-group">
  <%= link_to 'Visit URL', post_path(@post.id), class: "btn btn-primary" %>
</div>

<% if @post.user == current_user -%>
  <div class="btn-group">
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
    <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  </div>
<% end %>