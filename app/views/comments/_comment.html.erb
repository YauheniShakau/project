<%= div_for(comment) do %>
<div class="media mb-3">
	<div class="text-center">
		<!-- <img class="mr-3 rounded-circle" src="img/avatars/3.png" alt="Lucy" width="100" height="100"> -->
	</div>
	<div class="media-body">
		<h6 class="mt-1 mb-0 mr-3">
			<%= show_name(comment.user) %>
		</h6>
		<p class="mt-3 mb-2"><%= comment.body %></p>
		<time class="timeago text-muted" datetime="2017-12-03 20:00" data-tid="2">2 months ago</time>
		<div class="btn-group pull-right">
			<% if can? :destroy, @comment -%>
			<%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-default" %>
			<% end %>
		</div>
	</div>
</div>
<% end %>